<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3595454"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/kalamsahab" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbg"
                android:padding="7dp"
                android:text="@string/author"
                android:textColor="#FFFCFD"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                app:fontFamily="@font/halant_semibold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/sub_head"
                android:textColor="@color/green"
                android:textSize="28dp"
                app:fontFamily="@font/halant_semibold" />

            <TextView
                android:id="@+id/tvQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7sp"
                android:text="@string/quote"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="@color/green"
                android:drawableRight="@android:drawable/ic_menu_share"
                android:drawableTint="#fff"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="Share Option"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>